<style type="text/css">  
    body{margin: 0; background-color: rgb(138, 170, 229, .8)}  
    #page_banner{background-color: white; padding: 15px; border: solid 0.5px; color: 8AAAE5; font-size: 35px; padding-left: 30px; font-family: Inter, sans-serif;}
    #sub_header{background-color: grey; padding: 10px; color: 8AAAE5; font-size: 18px; padding-left: 30px; font-family: Inter, sans-serif;}
    tr{text-align:center}
    #table_header{color: FFFFFF; font-size: 32px; font-family: Inter, sans-serif;}
    #visit_key{color: FFFFFF; font-family: Inter, sans-serif; padding-top:10px}
    #visits{margin-left: auto; margin-right: auto; margin-top: 50px; text-align: center; margin-bottom: 50px }
    tbody{background-color: white; text-align:center; display:inline-block; padding-left: 100px; padding-right: 100px; margin-top: 30px} 
    tbody tr{background-color: A0CFB4; margin-top: 15px; margin-bottom: 15px; display:block; padding-right: 80px; padding-left: 80px; padding-top: 30px; padding-bottom: 30px}
</style>

<div id="page_banner">EnsurePrice</div>
<div id="sub_header"><em><%= session[:id] %></em> > <em><%= session[:plan_id] %></em> > <em><%= session[:doctor_name] %></em></div>

<table class="table table-striped col-md-12" id="visits">
  <thead>
  <tr>
    <th id="table_header">Select the Reason for Your Visit<th>
  </tr>
  <tr>
    <th id="visit_key">OV: Office Visit | ER: Emergency Room Visit | UC: Urgent Care Visit | SPC: Specialist Visit | HO: Hospital Stay<th>
  </tr>
  </thead>
  <tbody>
  <% @visits.each do |visit| %>
    <tr>

      <td>
        <%= link_to visit, price_path(visit) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
