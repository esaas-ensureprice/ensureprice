<style type="text/css">  
    body{margin: 0; background-color: rgb(138, 170, 229, .8)}  
    #page_banner{background-color: white; padding: 15px; border: solid 0.5px; color: 8AAAE5; font-size: 35px; padding-left: 30px; font-family: Inter, sans-serif;}
    #sub_header{background-color: grey; padding: 10px; color: 8AAAE5; font-size: 18px; padding-left: 30px; font-family: Inter, sans-serif;}
    #visit-div{text-transform: uppercase;}
    #table_header{font-size: 32px; font-family: Inter, sans-serif;}
    #price{margin-left: auto; margin-right: auto; margin-top: 100px; text-align: center; margin-bottom: 50px; background-color:white; padding-top: 100px; padding-bottom: 100px; }
    tbody{background-color: white; text-align:center; display:inline-block; padding-left: 100px; padding-right: 100px; margin-top: 30px} 
    tbody tr{background-color: white; text-align:center}
    .price_text{color:A0CFB4;font-size: 28px;}
    #back_button { padding: 11px; background-color: A0CFB4; font-size: 24px; margin-left:40%; margin-right:40%; width:20%;}  
</style>

<div id="page_banner">EnsurePrice</div>
<div id="sub_header"><em><%= session[:id] %></em> > <em><%= session[:plan_id] %></em> > <em><%= session[:doctor_name] %></em>  > <em id="visit-div"><%= session[:visit_type] %></em> </div>
<table class="table table-striped col-md-12" id="price">
  <thead>
  <tr>
    <th id="table_header">Your Estimated Upcoming Cost Is<th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <th class="price_text"> 
          <%=@dollarSign %> 
          <%=@price %>
        </th>
      </td>
    </tr>
    <tr>
      <td>
        <th class="price_text">*After paying your insurance deductible of $<%= @deductible %> </th>
      </td>
    </tr>
  </tbody>
</table>
<button id="back_button" type="button"><%= link_to "Back to home page", ensureprices_path %> </button>


