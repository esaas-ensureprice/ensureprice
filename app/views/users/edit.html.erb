
<% provide(:title, "Edit user") %>
<div class="container-fluid" id="update-container">
  <div class="row">
      <div id="update-header">Update Your Profile</div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-3">
       <div class="gravatar_edit">
          <div class="row" id="update-dp">
            <%= gravatar_for(@user, "big-gravatar") %>
          </div>
          <div class="row" id="update-dp">
            <a href="http://gravatar.com/emails" target="_blank"><button class="btn btn-primary">Change</button></a>
          </div>
      </div>
    </div>
    <div class="col-md-5">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <hr>
</div>