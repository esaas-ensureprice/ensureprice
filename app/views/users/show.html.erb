<br>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <%= gravatar_for @user %>
      <h1>
      <%= @user.name %>
      </h1>
      <%= @user.email %>
    </section>
  </aside>
</div>

<table class="table table-striped col-md-12" id="table-intro">
  <thead>
    <tr>
      <th>
        <div class="row">
          <div class="col-md-7" id="table_header">
            Your Reviews
            <% if params[:query] && !params[:query].blank?%>
              (<%= pluralize(@user_reviews.count, "Result") %> for '<%= params[:query] %>')
            <% end %>
          </div>
          <div class="col-md-5" id="search-option">
            <form class="form" method="get">
                <div class="col-md-10">
                  <input class="form-control" name="query" type="text" placeholder="Search Reviews by Doctor or Title" aria-label="Search">
                </div>
                <div class="col-md-2">
                  <button class="btn btn-primary" id="search-in-doctors-btn" type="submit">Search</button>
                </div>
            </form> 
          </div>
        </div>
      </th>
    </tr>
  </thead>
</table>
<div class="user-profile">
<div class="row">
  <div class="col-sm-12">
  <table>
    <% if @user_reviews.blank? %>
      <big>No Doctor Reviews yet...</big>
    <% else %>
      <% @user_reviews.each do |review| %>
        <div><big>Dr. <%= review.doctor_name %></big></div>
        <div><b>"<%= review.review_title %>"</b></div>
        <div><%= review.user_review %></div><br>
        <small>
        <%= link_to '<button class="btn btn-outline-primary edit-review-button">Edit</button>'.html_safe, edit_doctor_review_path(review) %>
        <%= link_to '<button class="btn btn-primary back-button">Doctor Profile</button>'.html_safe, doctor_path(review.doctor_id) %>
        <%= link_to '<button class="btn btn-danger delete-review-button">Delete Review</button>'.html_safe, doctor_review_path(review), method: 'delete' %>
        </small>
        <hr><br>
      <% end %>
    <% end %>
  </table>
  </div>
</div>
</div>
