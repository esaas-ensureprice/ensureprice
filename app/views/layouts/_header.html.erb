  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><img class="nav-logo"  src="<%= asset_path 'esaas_logo.png' %>" /></li>
      </ul>
      <%= link_to "EnsurePrice", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Health Insurance", ensureprice_path("InsuranceProviders")%></li>
        <li><%= link_to "About", '#' %></li>
