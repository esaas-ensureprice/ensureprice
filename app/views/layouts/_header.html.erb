<header class="navbar navbar-fixed-top navbar-inverse" id = "layout-header">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><img class="nav-logo"  src="<%= asset_path 'esaas_logo.png' %>" /></li>
      </ul>
      <%= link_to "EnsurePrice", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Estimate Cost", ensureprice_path("InsuranceProviders")%></li>
        <li><%= link_to "Find Doctors", doctors_path %></li>
        <li><%= link_to "About", about_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <li><%= image_tag(current_user.avatar.url, alt: 'Avatar', :class => "avatar-thumbnail") if current_user.avatar? %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>