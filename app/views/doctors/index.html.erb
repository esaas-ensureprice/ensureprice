<table class="table table-striped col-md-12" id="table-intro">
  <thead>
    <tr>
      <th>
        <div class="row">
          <div class="col-md-7" id="table_header">
            Select a Doctor
            <% if params[:query] && !params[:query].blank?%>
              (<%= pluralize(@doctors.count, "Result") %> for '<%= params[:query]%>')
            <% end %>
            <% if (params[:insurance_plan] && !params[:insurance_plan].blank?) || (params[:designation] && !params[:designation].blank?) || (params[:specialty] && !params[:specialty].blank?) %>
              (<%= pluralize(@doctors.count, "Result") %>)
            <% end %>
          </div>
          <div class="col-md-5" id="search-option">
            <form class="form" method="get">
                <div class="col-md-10">
                  <input class="form-control" name="query" type="text" placeholder="Search doctors" aria-label="Search">
                </div>
                <div class="col-md-2">
                  <button class="btn btn-primary" id="search-in-doctors-btn" type="submit">Search</button>
                </div>
            </form> 
          </div>
        </div>
      </th>
    </tr>
  </thead>
</table>
<div class="select-container">
  <div class="row">
    <div class="col-md-4" id="select-heading">
      <big><b>Insurance Providers</b></big>
    </div>
    <div class="col-md-4" id="select-heading">
      <big><b>Designations</b></big>
    </div>
    <div class="col-md-4" id="select-heading">
      <big><b>Specialities</b></big>
    </div>
  </div>
  <div class="row">
    <%= form_tag doctors_path, :method => 'get' do %>
        <div class="col-md-4" id="select-filter">
          <%= select_tag 'insurance_plan', options_for_select(@insurance_plans, "All"), :include_blank => "All Providers", :prompt => "Select Providers", :class => "filter" %>
        </div>
        <div class="col-md-4" id="select-filter">
          <%= select_tag 'designation', options_for_select(@designations, "All"), :include_blank => "All Designations", :prompt => "Select Doctor Designations", :class => "filter" %>
        </div>
         <div class="col-md-4" id="select-filter">
          <%= select_tag 'specialty', options_for_select(@specialities, "All"), :include_blank => "All Specialities", :prompt => "Select Specialities", :class => "filter" %>
        </div>
        <%= submit_tag "Filter Doctors", :class => "btn btn-primary filter-btn" %>
    <% end -%>
  </div>
</div>
<br>
<% if params[:insurance_plan] or params[:designation] or params[:specialty] %>
  <big><b>Doctor Filter Tags Applied : &nbsp;</b></big>
  <span class="filter-tag">
    <% if params[:insurance_plan]=='' %>
      All Providers &nbsp;
    <% elsif params[:insurance_plan] %>
      <%= params[:insurance_plan] %> &nbsp;
    <% end %>
  </span>
  <span class="filter-tag">
    <% if params[:designation]=='' %>
      All Designations &nbsp;
    <% elsif params[:designation] %>
      <%= params[:designation] %> &nbsp;
    <% end %>
  </span>
  <span class="filter-tag">
    <% if params[:specialty]=='' %>
      All Specialities &nbsp;
    <% elsif params[:specialty] %>
      <%= params[:specialty] %> &nbsp;
    <% end %>
  </span>
<br><br>
<% end %>
<br><br>
<div class="container">
  <div class="row">
      <% if !@doctors.empty? %>
        <% @doctors.each do |doctor| %>
          <div class="card">
            <div class="card-text doctor-name-header">Dr. <%= doctor.doctor_name %></div>
            <small>
              <div type="button" class="doc-card-rating" data-toggle="tooltip" data-placement="top" title="Average Rating: <%=@ratings[doctor.id]%>">
                <% for i in 1..5 %>
                  <span class="<%=star_rating_class(@ratings[doctor.id], i)%>" id="doc-rating-star"></span>
                <% end %>
                <%= link_to reviews_path do %>
                  <span id="doc-card-review-count">(<%= @count_ratings[doctor.id] %> reviews)</span>
                <% end %>
              </div>
            </small>
            <div class="card-content">
              <small><div class="card-text"><i class="fa fa-user-md" aria-hidden="true"> <span id="card-doc-about"><%= doctor.designation.truncate(20) %>, <%= doctor.specialty.truncate(25) %></span></i></div></small>
              <small><div class="card-text"><i class="fa fa-medkit" aria-hidden="true"> <b id="insurance-name"><%= doctor.insurance_plan %></b></i></div></small>
              <small><div class="card-text"><i class="fa fa-map-marker" aria-hidden="true"> <span id="card-site-name"><%= doctor.site_name.truncate(45) %></span></i></div></small>  
            </div>
            <br>
            <%= link_to '<button class="btn btn-primary doctor-select"> More Info</button>'.html_safe, doctor_path(doctor) %>
          </div>
        <% end %>
      <% else %>
          <div class="alert alert-danger">
            <b>No Doctors with above filters found!</b>
          </div>
      <% end %>
  </div>
</div>



